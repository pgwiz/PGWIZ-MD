# ============ AUTHENTICATION ============

# Your bot session ID from pairing service
SESSION_ID=""

# Phone number for pairing code (without + or spaces)
# Example: 254789462334
PAIRING_NUMBER=""

# ============ DATABASE (Choose ONE) ============

# SQLite (Default - Good for small deployments)
DB_URL="./baileys_store.db"

# MongoDB (Recommended for production - Unlimited storage)
# MONGO_URL="mongodb+srv://user:pass@cluster.mongodb.net/dbname"

# PostgreSQL (Recommended for production - Unlimited storage)
# POSTGRES_URL="postgresql://user:pass@host:5432/dbname"

# MySQL (Alternative for production - Unlimited storage)
# MYSQL_URL="mysql://user:pass@host:3306/dbname"

# ============ SERVER ============

# HTTP server port
PORT="5000"

# ============ AUTO STATUS ============

# Automatically view all WhatsApp statuses (true/false)
AUTO_STATUS_VIEW="false"

# Automatically react to all WhatsApp statuses (true/false)
AUTO_STATUS_REACT="false"

# Emojis for status reactions (comma-separated for random selection)
STATUS_EMOJIS="üíö,‚ù§Ô∏è,üî•,üòç,üëè"

# ============ SUDO USERS ============

# Comma-separated phone numbers with elevated privileges (without + or spaces)
# Example: SUDO_USERS="254789462334,1234567890"
SUDO_USERS=""

# ============ API KEYS ============

# Remove.bg API key for background removal
REMOVEBG_KEY=""

# ====================================================================
# IMPORTANT SECURITY NOTES:
# - NEVER share your .env file
# - NEVER commit .env to GitHub
